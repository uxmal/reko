<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
<!-- 
    <TargetFrameworks Condition="'$(MSBuildRuntimeType)'!='Core'">net472;netcoreapp2.0</TargetFrameworks>
    <TargetFrameworks Condition="'$(MSBuildRuntimeType)'=='Core'">netcoreapp2.0</TargetFrameworks>
-->
    <TargetFrameworks>net472;netcoreapp2.0</TargetFrameworks>
<!--    <RuntimeIdentifiers>win7-x86;win7-x64;unix</RuntimeIdentifiers> -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    <GenerateBindingRedirectsOutputType>true</GenerateBindingRedirectsOutputType>
    <ApplicationIcon />
    <OutputType>Exe</OutputType>
    <RootNamespace>Reko.Tools.Xslt</RootNamespace>
    <AssemblyName>xslt</AssemblyName>
  </PropertyGroup>
  <ItemGroup>
    <XsltExtraFiles Include="$(TargetDir)xslt.deps.json" />
    <XsltExtraFiles Include="$(TargetDir)xslt.runtimeconfig.dev.json" />
    <XsltExtraFiles Include="$(TargetDir)xslt.runtimeconfig.json" />
  </ItemGroup>
  <!-- Copy dependencies to the `tools` directory.-->
  <Target Name="CopyToToolsDir" AfterTargets="CopyFilesToOutputDirectory">
    <Message Importance="high" Text="Copying $(TargetFilename) to tools directory" />
    <Copy SourceFiles="$(TargetDir)$(TargetFileName)" DestinationFolder="$(ProjectDir).." />
    <Copy Condition="Exists('$(TargetDir)xslt.deps.json')" SourceFiles="$(TargetDir)xslt.deps.json" DestinationFolder="$(ProjectDir).." />
    <Copy Condition="Exists('$(TargetDir)xslt.runtimeconfig.dev.json')" SourceFiles="$(TargetDir)xslt.runtimeconfig.dev.json" DestinationFolder="$(ProjectDir).." />
    <Copy Condition="Exists('$(TargetDir)xslt.runtimeconfig.json')" SourceFiles="$(TargetDir)xslt.runtimeconfig.json" DestinationFolder="$(ProjectDir).." />
  </Target>
</Project>
