<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
<!-- 
    <TargetFrameworks Condition="'$(MSBuildRuntimeType)'!='Core'">net472;netcoreapp2.0</TargetFrameworks>
    <TargetFrameworks Condition="'$(MSBuildRuntimeType)'=='Core'">netcoreapp2.0</TargetFrameworks>
-->
    <TargetFrameworks>net472;netcoreapp2.0</TargetFrameworks>
<!--    <RuntimeIdentifiers>win7-x86;win7-x64;unix</RuntimeIdentifiers> -->
    <TargetLatestRuntimePatch>true</TargetLatestRuntimePatch>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    <GenerateBindingRedirectsOutputType>true</GenerateBindingRedirectsOutputType>
    <ApplicationIcon />
    <OutputType>Exe</OutputType>
    <StartupObject>Reko.Tools.C2Xml.Program</StartupObject>
    <RootNamespace>Reko.Tools.C2Xml</RootNamespace>
    <AssemblyName>c2xml</AssemblyName>
    <Configurations>Debug;Release;UnixRelease</Configurations>
  </PropertyGroup>

  <ItemGroup>
    <ConfigurationFiles Include="$(ProjectDir)..\..\Drivers\reko.config" />
    <PackageReference Include="NUnit" Version="3.12.0" />
    <PackageReference Include="NUnit3TestAdapter" Version="3.16.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.NET.Test.SDK" Version="16.5.0-preview-20200116-01" />
  </ItemGroup>

  <!-- Copy dependencies to the `tools` directory.-->

  <Target Name="CopyToToolsDir" AfterTargets="CoreBuild">
    <Message Text="Copy $(ProjectDir)$(OutputPath)$(TargetFileName) to $(ProjectDir)..\..\tools" Importance="High" />
    <Copy SourceFiles="$(ProjectDir)$(OutputPath)$(TargetFileName)" DestinationFolder="$(ProjectDir)..\..\tools" />
    <Copy SourceFiles="$(ProjectDir)$(OutputPath)$(TargetFileName).config" DestinationFolder="$(ProjectDir)..\..\tools" />
    <Copy SourceFiles="$(ProjectDir)$(OutputPath)Reko.Core.dll" DestinationFolder=".." />
    <Copy SourceFiles="$(ProjectDir)..\..\..\external\docopt.net-0.6.1.4\DocoptNet.dll" DestinationFolder=".." />
    <Copy SourceFiles="@(ConfigurationFiles)" DestinationFolder=".." SkipUnchangedFiles="true" />
  </Target>

  <ItemGroup>
    <ProjectReference Include="..\..\Core\Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="DocoptNet">
      <HintPath>..\..\..\external\docopt.net-0.6.1.4\DocoptNet.dll</HintPath>
    </Reference>
  </ItemGroup>
</Project>