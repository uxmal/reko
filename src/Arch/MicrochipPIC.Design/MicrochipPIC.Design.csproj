<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    <GenerateBindingRedirectsOutputType>true</GenerateBindingRedirectsOutputType>
    <RootNamespace>Reko.Arch.MicrochipPIC.Design</RootNamespace>
    <AssemblyName>Reko.Arch.MicrochipPIC.Design</AssemblyName>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\Core\Core.csproj"/>
    <ProjectReference Include="..\..\Gui\Gui.csproj"/>
    <ProjectReference Include="..\M68k\M68k.csproj"/>
    <ProjectReference Include="..\..\Libraries\Microchip\Utils\Microchip.Utils.csproj"/>
    <ProjectReference Include="..\Microchip\MicrochipPIC.csproj"/>
  </ItemGroup>
  <ItemGroup>
    <Reference Include="System.Resources.Extensions" />
  </ItemGroup>

  <!-- Workaround found at https://github.com/wixtoolset/issues/issues/5705 -->
  <Target Name="GetTargetPath" Returns="@(_FakeOutputPath)">
    <ItemGroup>
      <_FakeOutputPath Include="$(MSBuildProjectDirectory)\$(PackageOutputPath)\netcoreapp3.1\$(AssemblyName).dll" />
    </ItemGroup>
  </Target>

</Project>
