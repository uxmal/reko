{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary",
				"/p:Platform=x64",
				"/p:Configuration=Debug",
                "/verbosity:minimal",
                "/m",
			],
			"group": "build",
			"presentation": {
				"reveal": "silent"
			},
			"problemMatcher": "$msCompile"
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"clean",
				"-v:m"
			],
			"problemMatcher": [
				"$msCompile"
			]
        },
        {
            "label":"unit tests",
            "type":"process",
            "command":"dotnet",
            "args": [
                "test",
                "UnitTests/bin/x64/Debug/Reko.UnitTests.dll",
            ]
		}
	]
}